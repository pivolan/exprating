        <div class="col-md-7">
            <h1>Структура кураторства и страниц</h1>
        </div>
        <div class="col-md-5">
            <h1>Статистика</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7">
            <div id="experts" class="well well-sm" data-url="{{ path('ajax_expert_tree') }}"></div>
        </div>
    </div>
