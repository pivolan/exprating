{% extends '_layout/_profile.html.twig' %}
{% block title %}Мое эксперты{% endblock %}
{% block breadcrumbs %}
    {{ parent() }}
    → <a href="{{ path("curator_my_experts") }}">Мои эксперты</a>
{% endblock %}
{% block profile_body %}
