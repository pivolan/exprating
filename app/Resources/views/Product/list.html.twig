{% extends 'layout.html.twig' %}
{% block body_type %}rubric{% endblock %}
{% block content %}
    {{ include("Product/listPart.html.twig") }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" async="async">
        $(document).on('click', '.rubric-filters ul.dropdown-menu li a, ul.pagination li a', function (event) {
            event.preventDefault();
            var $this = this;
            var href = $($this).attr('href');
            $.ajax(href, {
                success: function (data) {
                    $('div.content').html(data);
                }
            });
        });
    </script>
{% endblock %}
