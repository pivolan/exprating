{% extends 'Profile/user.html.twig' %}
{% block title %}Доступные категории{% endblock %}
{% block breadcrumbs %}
    {{ parent() }}
    → <a href="{{ path("category_admin_categories") }}">Доступные категории</a>
{% endblock %}
{% block profile_body %}
    <div class="row">
        <div class="col-md-5">
            <h1>Категории</h1>
            <div id="treeCategory" class="categories well"></div>
        </div>
        <div class="col-md-7 history_category">
            {% if category %}
                {{ include("CategoryAdmin/categoriesPart.html.twig") }}
            {% endif %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ include("_include/Category/_jsTree.html.twig", {'treeId': 'treeCategory'}) }}
    <script src="http://malsup.github.com/jquery.form.js"></script>
    <script type="text/javascript">
        $(document).on('submit', 'form[name="rating_settings"]', function (event) {
            event.preventDefault();
            $(this).ajaxSubmit({
                success: function (response) {
                    $('div.history_category').html(response);
                }
            });
        });
    </script>
{% endblock %}