{% extends "layout.html.twig" %}
{% block content %}
    {{ knp_pagination_render(pagination) }}
    <div class="row">
        {% for comment in pagination %}
            <div class="well col-md-3">
                <span class="pull-left label label-info">#{{ comment.id }}</span>
                <span class="pull-left label label-primary">{{ comment.product.name }}</span>
                <div class="pull-right label label-default">
                    {{ comment.createdAt|date('d.m.Y') }}
                </div>
                <h3>{{ comment.fullName }}</h3>
                <div class="comment-text">
                    {{ comment.message }}
                </div>
                <div class="row">
                    <div class="col-md-offset-3">
                        {{ form(forms[loop.index0]) }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {{ knp_pagination_render(pagination) }}
{% endblock %}