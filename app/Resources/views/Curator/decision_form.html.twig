<div class="row edit-menu">
    <div class="col-md-4 col-md-offset-4">
        <div class="btn-group">
            {{ form_start(form) }}
            {{ form_widget(form.approve, {'attr':{'class': 'btn btn-success'}}) }}
            <button type="button" class="btn btn-danger dropdown-toggle" aria-haspopup="true"
                    aria-expanded="true" data-toggle="dropdown">
                Отклонить <span class="caret"></span>
            </button>
            <ul class="dropdown-menu form-group">
                <li>
                    {{ form_widget(form.rejectReason, {'attr':{'placeholder':'Укажите причину отказа', 'class':'decision'}}) }}
                </li>
                <li>
                    {{ form_widget(form.reject, {'attr':{'class': 'btn btn-default pull-right'}}) }}
                </li>
            </ul>
            {{ form_end(form) }}
        </div>
    </div>
</div>
